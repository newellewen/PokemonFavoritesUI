@page
@model PokemonFavoritesUI.Pages.Login

<div>
    @Model.Message
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Username" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Username" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm" asp-page-handler="Login">Log in</button>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm" asp-page-handler="Register">Register</button>
    </div>
</form>

