@page
@model PokemonFavoritesUI.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div>
    @Model.Message
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="FirstName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="LastName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Username" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Username"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password"/>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm" asp-page-handler="Register">Register</button>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm" asp-page-handler="Cancel">Cancel</button>
    </div>
</form>